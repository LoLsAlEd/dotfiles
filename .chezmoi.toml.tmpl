{{- /* Checks if running interactively, which is not the case for GitHub Codespaces */ -}}
{{- $interactive := stdinIsATTY -}}

{{- $name := promptStringOnce . "name" "Name" -}}
{{- $email := promptStringOnce . "email" "Email address" -}}

{{- if $interactive -}}
{{-   writeToStdout "ðŸ’¡ Tip: you can re-enter your name and email with `chezmoi init --data=false`.\n" -}}
{{- end -}}

[data]
name = {{ $name | quote }}
email = {{ $email | quote }}

[edit]
{{- if lookPath "code" }}
command = "code"
args = ["--wait"]
{{- else if lookPath "nvim" }}
command = "nvim"
{{- else if lookPath "vim" }}
command = "vim"
{{- else if lookPath "nano" }}
command = "nano"
{{- end }}

[diff]
{{- if lookPath "delta" }}
pager = "delta"
{{- else if lookPath "bat" }}
pager = "bat --plain"
{{- else }}
pager = "less -R"
{{- end }}
